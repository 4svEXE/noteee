<div class="note">
  <div class="note nav">
    {{#if isHistory}}

    <a href="/tgNote/{{chatId}}" class="sv-button">
      Список твоїх нагадайок:
    </a>

    <form class="" action="" method="get">
      <input type="hidden" name="tgId" value="{{chatId}}">
      <input type="submit" value="Історія нагадувань:" class="sv-button active" >
    </form>
    {{else}}

    <a href="" class="sv-button active">
      Список нагадайок:
    </a>

    <form class="" action="/tgNote/history" method="get">
      <input type="hidden" name="tgId" value="{{chatId}}">
      <input type="submit" value="Історія нагадувань:" class="sv-button">
    </form>
    {{/if}}
  </div>
  <hr>
  {{#if note}}
  {{#if isHistory}}
  {{#each note}}
  <div class="note">
    {{#each this}}
    <!-- {{#if this.title}} -->

    <h5>{{title}}</h5>
    <hr>

    <div class="sv-container">
      <h6>Створено:</h6>
      <h6 class="createdAt">{{createdAt}}</h6>
    </div>

    <div class="sv-container">
      <h6>Відправлено:</h6>
      <div class="sv-flex">
        <h6>{{sendAt.time}}&nbsp</h6><h6 class="sendAtDate">{{sendAt.date}}</h6>
      </div>
    </div>

    <!-- {{/if}} -->
    {{/each}}
  </div>
  {{/each}}

  {{else}}

  {{#each note}}
    <div class="note">
      {{#each this}}
      <!-- {{#if this.title}} -->

      <h5>{{title}}</h5>
      <hr>

      <div class="sv-container">
        <h6>Створено:</h6>
        <h6 class="createdAt">{{createdAt}}</h6>
      </div>

      <div class="sv-container">
        <h6>Відправити:</h6>
        <div class="sv-flex">
          <h6>{{sendAt.time}}&nbsp</h6><h6 class="sendAtDate">{{sendAt.date}}</h6>
        </div>
      </div>

      <div class="sv-container sv-flex">
        <form class="" action="/tgNote/delete/{{_id}}" method="post">
          <input type="hidden" name="tgId" value="{{tgId}}">
          <input type="hidden" name="id" value="{{_id}}">
          <input type="submit" class="sv-button" value="видалити">
        </form>
      </div>

      <!-- {{/if}} -->
      {{/each}}
    </div>
    {{/each}}
  {{/if}}

  {{else}}
  <p>
    покищо нагадайок немає.
    Щоб створити нагадайку потрібно скористатись ботом:
  </p>
  <hr>
  <p>
    <a href="https://t.me/note_from_future_bot">Відвідати бота</a>
  </p>
  {{/if}}

  <script src="../js/dateParser.js" defer></script>

</div>
